@model ProductSanaCommerce.Models.Product

<div id="product-list">
    <div class="container"> 
        <div class = "row">
            <div class="col-lg-8 col-sm-8 col-xs-5">
                <p class = "nuevoProducto">NUEVO PRODUCTO</p>
                <hr class="lineTitle"> 
            </div>
        </div>
		@using (Html.BeginForm("AddProduct", "Products", FormMethod.Post, new { @class = "form-horizontal", id = "formId", }))  
		{
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4 col-sm-4 col-xs-3">
					   @Html.TextBoxFor(m=> m.Name, new { @class = "form-control", id="name", placeholder = "Name"})
                    </div>
                    <div class="col-lg-2 col-sm-2 col-xs-2">
					    @Html.TextBoxFor(m=> m.Price, new { @class = "form-control", id="price", placeholder = "Price"})
                    </div>
                    <div class="col-lg-2 col-sm-2 col-xs-2">
					    @Html.TextBoxFor(m=> m.Quantity, new { @class = "form-control", id="quantity", placeholder = "Quantity"})
                    </div>
                </div>  
            </div>
            <div class="form-group">
                    <div class="row">
                        <div class="col-lg-6 col-sm-6 col-xs-4">
					        @Html.TextAreaFor(m=> m.Description, new { @class = "form-control", id="description", placeholder = "Description"})
                        </div>
                        <div class="col-lg-2 col-sm-2 col-xs-1">
                            <button type="submit" class="btn btn-primary addproducts">Agregar</button>
                        </div>
                    </div>
            </div>                                       
           }		
  </div>
</div>